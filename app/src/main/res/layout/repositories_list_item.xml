<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/repository_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingVertical="6sp"
        android:textColor="@color/secondary"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/repository_description"
        app:layout_constraintEnd_toStartOf="@id/programming_language"
        app:layout_constraintStart_toStartOf="@id/left_boundary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginBottom="14dp"
        tools:text="moko-analytics moko-analytics moko-analytics moko-analytics" />

    <TextView
        android:id="@+id/programming_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/purple"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/repository_name"
        app:layout_constraintEnd_toEndOf="@id/right_boundary"
        app:layout_constraintTop_toTopOf="@id/repository_name"
        tools:text="Kotlin" />

    <TextView
        android:id="@+id/repository_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:lineSpacingExtra="20sp"
        android:lineSpacingMultiplier="0"
        android:paddingVertical="3sp"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/right_boundary"
        app:layout_constraintStart_toStartOf="@id/left_boundary"
        app:layout_constraintTop_toBottomOf="@id/repository_name"
        tools:text="Ethereum Web3 implemenataion for mobile (android and ios) Kotlin Multiplatform development" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_boundary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_boundary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>